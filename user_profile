    <main class="flex-grow flex justify-center p-4 sm:p-8">
      <div
        class="w-full max-w-3xl bg-white p-6 sm:p-10 rounded-xl shadow-2xl border border-gray-100"
      >
        <h2
          class="font-heading text-3xl font-extrabold text-primary-indigo mb-6 border-b pb-3"
        >
          Your Personal Health History & BMI Calculator
        </h2>

        <form id="history-form" class="space-y-6">
          <div
            class="p-4 bg-analysis-blue/30 rounded-lg border border-analysis-blue"
          >
            <h3 class="font-heading text-lg font-bold text-primary-indigo mb-3">
              Personal & Course Details
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label
                  for="hist-name"
                  class="block text-sm font-medium text-gray-700"
                  >Name</label
                >
                <input
                  type="text"
                  id="hist-name"
                  class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-primary-indigo focus:border-primary-indigo"
                  required
                />
              </div>
